<p><%= image_tag @user.image %></p>
<p><%= @user.first_name %>
<%= @user.last_name %></p>
<p><%= @user.username %></p>
<p><%= @user.email %></p>

<p>My Movies</p>
<ul>  
  <% @user_movies.each do |movie| %>
    <li><%= link_to movie.title, movie_path(movie) %></li>
  <% end %>
</ul>

<p>My Reviews</p>
<ul>
  <% @user_reviews.each do |review| %>
    <li><%= link_to review.title, movie_path(review.movie) %></li>
  <% end %>
</ul>
